{
  "$schema": "/etc/xdg/swaync/configSchema.json",
  "positionX": "right",
  "positionY": "top",
  "layer": "overlay",
  "control-center-layer": "top",
  "control-center-width": 420,
  "notification-window-width": 400,
  "widgets": [
    "mpris",
    "title",
    "notifications",
    "buttons-grid"
  ],
  "widget-config": {
    "title": {
      "text": "Spider-Alerts",
      "clear-all-button": true,
      "button-text": "Clear Web"
    },
    "mpris": {
      "image-size": 80,
      "image-radius": 12,
      "max-text-length": 30
    },
    "buttons-grid": {
      "position": "bottom",
      "orientation": "horizontal",
      "actions": [
        {
          "label": "󰤄",
          "command": "systemctl suspend",
          "tooltip": "Web Suspension"
        },
        {
          "label": "󰌾",
          "command": "hyprlock",
          "tooltip": "Activate Spider-Lock"
        },
        {
          "label": "󰗽",
          "command": "hyprctl dispatch exit",
          "tooltip": "Exit Web"
        },
        {
          "label": "󰜉",
          "command": "systemctl reboot",
          "tooltip": "Web Reboot"
        },
        {
          "label": "⏻",
          "command": "systemctl poweroff",
          "tooltip": "Symbiote Shutdown"
        }
      ]
    }
  }
}
